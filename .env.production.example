# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database (Required)
DATABASE_URL=postgresql://username:password@host:port/database_name?sslmode=require

# Server Configuration
PORT=8080
NODE_ENV=production

# Session Security (Required - generate a random string)
SESSION_SECRET=your_production_session_secret_here_min_32_chars

# External Services (Optional - only if features are used)
OPENAI_API_KEY=sk-...
SENDGRID_API_KEY=SG...

# Additional Production Settings
# Add any other production-specific variables here