    const animateGradient = () => {
      const animationFrame = () => {
        const now = Date.now();
        
        setGradientPosition({
          // Gradiente BLU - movimento lento e fluido
          x1: -40 + Math.sin(now / 3000) * 100 + mousePosition.x * 50,
          y1: 40 + Math.cos(now / 3000) * 100 + mousePosition.y * 50,
          
